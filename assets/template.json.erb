<%- size = @errors.size %>
{
  "errors":[
    <%- @errors.each_with_index do |error, index| %>
    {
      "type": "<%= error.type %>",
      "short_filename": "<%= error.short_filename %>",
      "line_number": "<%= error.line_number %>",
      "message": "<%= error.message %>",
      "url": "<%= error.url %>"
    }<%= "," unless index == size - 1 %>
    <%- end %>
  ]
}
